/*Faça um programa que receba três inteiros e diga qual deles é o maior e qual o menor. Consegue criar mais de uma solução?*/
#include <stdio.h>
#include <stdlib.h>

int main(){
{
    int a, b, c, menor, maior;

    printf("Digite tres numeros: ");
    scanf("%d%d%d", &a, &b, &c);
    menor = a;
    maior = a;

    if(menor > b)
        menor = b;
    if(menor > c)
        menor = c;

    if(maior < b)
        maior = b;
    if(maior < c)
        maior = c;

    printf("\tMenor: %d\tMaior: %d\n", menor, maior);
}
    return 0;
    }
